<% form_for(league_post, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    Titre<br />
    <%= f.text_field :title %>
  </p>
  <p>
	Photo<br />
    <%= f.file_field :picture %>
  </p>
  <p>
    Description<br />
    <%= f.text_area :description , :cols=>100 , :rows=>15 %>
  </p>
  <p>
    <%= f.submit 'Enregistrer' %>
  </p>
<% end %>