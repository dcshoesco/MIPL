<%=render :partial=>'layouts/fullpage_header'%>
<h1>Listing team_posts</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @team_posts.each do |team_post| %>
  <tr>
    <td><%=h team_post.team_id %></td>
    <td><%=h team_post.title %></td>
    <td><%=h team_post.description %></td>
    <td><%= link_to 'Show', team_post %></td>
    <td><%= link_to 'Edit', edit_team_post_path(team_post) %></td>
    <td><%= link_to 'Destroy', team_post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New team_post', new_team_post_path %>

